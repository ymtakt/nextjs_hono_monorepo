{
  "name": "sample-app",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10"
  },
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run dev:api & npm run dev:web",
    "dev:web": "cd typescript/frontend && npm run dev",
    "dev:api": "cd typescript/backend && npm run dev",
    "test": "cd typescript/frontend && npm run test",
    "test:ui": "cd typescript/frontend && npm run test:ui",
    "test:run": "cd typescript/frontend && npm run test:run",
    "test:coverage:web": "cd typescript/frontend && npm run test:coverage",
    "test:coverage:api": "cd typescript/backend && npm run test:coverage",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "lint": "npx @biomejs/biome lint .",
    "lint:fix": "npx @biomejs/biome lint --write .",
    "check": "npx @biomejs/biome check --write .",
    "check:ci": "npx @biomejs/biome ci ."
  },
  "workspaces": [
    "typescript/*"
  ],
  "lint-staged": {
    "typescript/frontend/**/*.{ts,tsx,js,jsx}": [
      "cd typescript/frontend && npx @biomejs/biome format --write",
      "cd typescript/frontend && npx @biomejs/biome lint --write"
    ],
    "typescript/backend/**/*.{ts,js}": [
      "cd typescript/backend && npx @biomejs/biome format --write",
      "cd typescript/backend && npx @biomejs/biome lint --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "npx @biomejs/biome format --write",
      "npx @biomejs/biome lint --write"
    ]
  }
}
